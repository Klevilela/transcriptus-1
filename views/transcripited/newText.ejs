<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <!-- Biblioteca de ícones FontAwesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />

    <!-- Arquivo CSS do Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css"
    />

    <style>
      /* Animations */
      @keyframes fadeIn {
        0% {
          opacity: 0;
        }
        100% {
          opacity: 1;
        }
      }

      @keyframes slideIn {
        0% {
          transform: translateY(-50px);
        }
        100% {
          transform: translateY(0);
        }
      }

      /* Styles */
      body {
        background-color: #f2f2f2;
      }

      .container {
        margin-top: 30px;
      }

      .card {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        padding: 20px;
        animation: fadeIn 0.5s ease-out;
      }

      .card-header {
        font-size: 1.5rem;
        font-weight: bold;
        animation: slideIn 0.5s ease-out;
      }

      .card-body {
        margin-top: 10px;
        font-size: 1.2rem;
        animation: slideIn 0.5s ease-out;
      }
    </style>
    <title>Projeto</title>
  </head>
  <body>
    <hr />
    <div class="container">
      <div class="card">
        <div class="card-header">
          <h2>Texto em forma fonética</h2>
        </div>
        <div class="card-body"><%= text %></div>
        <div class="card-header">
          <h2>Tradução</h2>
        </div>
        <div class="card-body">
          <ul>
            <% translation.forEach(function(word){ %>
            <button class="btn btn-primary"><%= word %></button>
            <% }) %>
          </ul>
        </div>

        <div class="card-header"><h2>Pronúncia</h2></div>
        <div class="card-body"><%= engWord %></div>

        <hr />
        <br />
        <section class="image">
          <div class="image-container">
            <img src="<%= urlImage  %>" />
          </div>
        </section>
        <br />
        <audio controls>
          <source src="<%= audio %>" type="audio/mp3" />
          <source src="<%= audio %>" type="audio/mpeg" />
          Seu navegador não suporta a tag de áudio.
        </audio>
        <div class="card-header">
          <h2>Contexto</h2>
        </div>
        <div class="card-body">
          <% phrases.forEach(function(phrase) { %>
          <div class="row">
            <div class="col-sm-6">
              <%- phrase.english.replace(originalText, `<strong>
                ${originalText} </strong
              >`) %>
            </div>
            <div class="col-sm-6"><%= phrase.portuguese %></div>
          </div>
          <hr />
          <% }); %>
        </div>

        <br />

        <!-- Link de volta para a página principal -->
        <a
          href="/"
          class="btn btn-outline-secondary btn-lg mt-4 animate__animated animate__fadeInUp"
        >
          <i class="fas fa-arrow-left mr-2"></i>Voltar para a página principal
        </a>
      </div>
    </div>
  </body>
  <script src="/js/bootstrap.min.js"></script>
</html>
